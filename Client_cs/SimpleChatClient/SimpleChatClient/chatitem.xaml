<UserControl x:Class="SimpleChatClient.chatitem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SimpleChatClient"
             mc:Ignorable="d">

    <StackPanel>
        <Border Background="GhostWhite" CornerRadius="15 0 0 0">
            <TextBlock Margin="10 5 10 0" Name ="nameTextBlock" Text="Test" FontSize="12" TextWrapping="Wrap"/>
        </Border>
        <Border Background="#FF01E8FF" CornerRadius="0 0 15 0">
            <TextBlock Margin="10 0 10 5" Name ="messageTextBlock" Text="Tesat" FontSize="18" TextWrapping="Wrap"/>
        </Border>
    </StackPanel>
</UserControl>
